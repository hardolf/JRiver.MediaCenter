<?xml version="1.0" encoding="utf-8"?>

<configuration>

    <configSections>
        <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
            <section name="MediaCenter.LyricsFinder.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
        </sectionGroup>
        <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
            <section name="MediaCenter.LyricsFinder.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
        </sectionGroup>
    </configSections>

    <!-- These settings are private and may be configured in an "App.private.config" file for the current DLL: -->
    <!--
    <appSettings>
        <add key="mcWebServiceUrl" value="http://localhost:52199/MCWS/v1" />
        <add key="mcWebServiceAccessKey" value="YOUR_OWN_STRING" />
        <add key="mcWebServiceUserName" value="YOUR_OWN_STRING" />
        <add key="mcWebServicePassword" value="YOUR_OWN_STRING" />
    </appSettings>
    -->

    <applicationSettings>
        <MediaCenter.LyricsFinder.Properties.Settings>
            <setting name="McWebServiceConnectAttempts" serializeAs="String">
                <value>5</value>
            </setting>
            <setting name="McNoLyricsSearchList" serializeAs="String">
                <value>No Lyrics Found</value>
            </setting>
            <setting name="MouseMoveOpenLyricsForm" serializeAs="String">
                <value>False</value>
            </setting>
            <setting name="LocalAppDataFile" serializeAs="String">
                <value>%USERPROFILE%\Documents\LyricsFinder\LyricsFinder.xml</value>
            </setting>
        </MediaCenter.LyricsFinder.Properties.Settings>
    </applicationSettings>

    <!-- For log4net debugging only; else use the applicationSettings section -->
    <!--
    <appSettings>
      <add key="log4net.Internal.Debug" value="true" />
    </appSettings>
    -->

    <!-- For log4net debugging -->
    <!--
    <system.diagnostics>
      <trace autoflush="true">
        <listeners>
          <add name="textWriterTraceListener" 
               type="System.Diagnostics.TextWriterTraceListener" 
               initializeData="%USERPROFILE%\Documents\LyricsFinder\log4net.diag.log"/>
        </listeners>
      </trace>
    </system.diagnostics>
    -->

    <!-- Place the log files in an existing folder that the LyricsFinder is allowed to write logs in. -->
    <!-- You can place them in the same folder used for the LocalAppDataFile. -->
    <!-- log4net threshold level can be set to ALL|DEBUG|INFO|WARN|ERROR|FATAL|OFF -->
    <log4net threshold="ALL">
        <!-- Error log -->
        <appender name="ErrorRollingLog" type="log4net.Appender.RollingFileAppender">
            <file value="${USERPROFILE}\Documents\LyricsFinder\LyricsFinder.error.log" />
            <appendToFile value="true" />
            <rollingStyle value="Composite" />
            <datePattern value=".dd.'log'" />
            <maxSizeRollBackups value="7" />
            <maximumFileSize value="100MB" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="&#xD;&#xA;--------------------------------------------------------------------------------&#xD;&#xA;Timestamp         : %date{yyyy.MM.dd HH:mm:ss,fff}&#xD;&#xA;Internal message  : %message&#xD;&#xA;External message  : %property{ExternalMessage}&#xD;&#xA;Level             : %level&#xD;&#xA;Log reference     : %property{LogReference}&#xD;&#xA;Host name         : %property{log4net:HostName}&#xD;&#xA;Windows user      : %username&#xD;&#xA;User              : %property{UserName}&#xD;&#xA;IP address        : %property{IpAddress}&#xD;&#xA;Begin time        : %property{Begin}&#xD;&#xA;End time          : %property{End}&#xD;&#xA;Fault code        : %property{FaultCode}&#xD;&#xA;Fault sub code    : %property{FaultSubCode}&#xD;&#xA;Extra information : %property{ExtraInfo}&#xD;&#xA;App. domain       : %appdomain&#xD;&#xA;Calling class     : %property{EntryClass}&#xD;&#xA;Version           : %property{EntryClassVersion}&#xD;&#xA;File              : %property{ExceptionTriggerFile}&#xD;&#xA;Class             : %property{ExceptionTriggerClass}&#xD;&#xA;Version           : %property{ExceptionTriggerClassVersion}&#xD;&#xA;Method            : %property{ExceptionTriggerMethod}&#xD;&#xA;Arguments         : %property{MethodArguments}&#xD;&#xA;Exception         :&#xD;&#xA;%exception--------------------------------------------------------------------------------&#xD;&#xA;" />
            </layout>
            <!-- ALL|DEBUG|INFO|WARN|ERROR|FATAL|OFF -->
            <filter type="log4net.Filter.LevelRangeFilter">
                <levelMin value="WARN" />
            </filter>
            <filter type="log4net.Filter.LoggerMatchFilter">
                <loggerToMatch value="LyricsFinder" />
            </filter>
            <filter type="log4net.Filter.DenyAllFilter" />
        </appender>

        <!-- Info log -->
        <appender name="InfoRollingLog" type="log4net.Appender.RollingFileAppender">
            <file value="${USERPROFILE}\Documents\LyricsFinder\LyricsFinder.log" />
            <appendToFile value="true" />
            <rollingStyle value="Composite" />
            <datePattern value=".dd.'log'" />
            <maxSizeRollBackups value="7" />
            <maximumFileSize value="100MB" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
            </layout>
            <!-- ALL|DEBUG|INFO|WARN|ERROR|FATAL|OFF -->
            <filter type="log4net.Filter.LevelRangeFilter">
                <levelMin value="DEBUG" />
                <levelMax value="FATAL" />
            </filter>
            <filter type="log4net.Filter.LoggerMatchFilter">
                <loggerToMatch value="LyricsFinder" />
            </filter>
            <filter type="log4net.Filter.DenyAllFilter" />
        </appender>

        <root>
            <!-- priority value can be set to ALL|DEBUG|INFO|WARN|ERROR|FATAL|OFF -->
            <!--<priority value="OFF"/>-->
            <!-- ALL|DEBUG|INFO|WARN|ERROR|FATAL|OFF -->
            <level value="ALL" />
            <appender-ref ref="ErrorRollingLog" />
            <appender-ref ref="InfoRollingLog" />
        </root>
    </log4net>

    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <dependentAssembly>
                <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
                <bindingRedirect oldVersion="0.0.0.0-12.0.0.0" newVersion="12.0.0.0" />
            </dependentAssembly>
            <dependentAssembly>
                <assemblyIdentity name="System.Numerics.Vectors" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
                <bindingRedirect oldVersion="0.0.0.0-4.1.4.0" newVersion="4.1.4.0" />
            </dependentAssembly>
            <dependentAssembly>
                <assemblyIdentity name="System.Buffers" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
                <bindingRedirect oldVersion="0.0.0.0-4.0.3.0" newVersion="4.0.3.0" />
            </dependentAssembly>
        </assemblyBinding>
    </runtime>

    <userSettings>
        <MediaCenter.LyricsFinder.Properties.Settings>
            <setting name="UpgradeSettings" serializeAs="String">
                <value>True</value>
            </setting>
            <setting name="LyricsFormSize" serializeAs="String">
                <value>400, 500</value>
            </setting>
        </MediaCenter.LyricsFinder.Properties.Settings>
    </userSettings>

</configuration>